<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MongoDb CRUD</title>
  </head>

  <body>
    <h1>Mongo Db Crud Example </h1>
    {{message}}
    <ul>
      {{#each employees}}
        <li>
          <p>Title :
            {{this.title}}
            / Author :
            {{this.author}}
            <a href="/?book_id={{this._id}}">Edit</a>
            <a
              href="/?delete_id={{this._id}}"
              onclick="return confirm('Are You Sure You Want To Delete This Book !!?')"
            >Delete</a></p>

        </li>
      {{/each}}
    </ul>
    <p>Book id {{book_id}}</p>

    {{#if book_id}}
      <form action="/update_book/{{book_id}}" method="post">
        <h3>Update Book !</h3>
        <label for="title">title</label>
        <input type="text" name="title" value="{{edit_book.title}}" />
        <label for="author">Author</label>
        <input type="text" name="author" value="{{edit_book.author}}" />
        <input type="submit" value="submit" />
      </form>
    {{else}}
      <form action="/store_book" method="post">
        <h3>Create Book !</h3>
        <label>title</label>
        <input type="text" name="title" />
        <label>Author</label>
        <input type="text" name="author" />
        <input type="submit" value="submit" />
      </form>
    {{/if}}
  </body>

</html>